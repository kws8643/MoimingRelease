<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="88dp"
    android:background="@drawable/shape_round_bg_white">


    <LinearLayout
        android:id="@+id/btn_session_dutchpay"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="9sp"
            android:text="새 더치페이 생성"
            android:textColor="@color/textBoldGray"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_session_funding"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_session_dutchpay">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="9sp"
            android:text="새 모금 생성"
            android:textColor="@color/textBoldGray"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>