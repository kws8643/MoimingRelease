<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="80dp"
    android:layout_height="106dp">


    <ImageView
        android:id="@+id/img_group_info_member_pf"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/shape_round_group_info_member_pf"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_group_info_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/textDark"
        android:textSize="10sp"
        android:textStyle="normal"
        android:lineSpacingExtra="6sp"
        app:layout_constraintLeft_toLeftOf="@id/img_group_info_member_pf"
        app:layout_constraintRight_toRightOf="@id/img_group_info_member_pf"
        app:layout_constraintTop_toBottomOf="@id/img_group_info_member_pf" />


</merge>