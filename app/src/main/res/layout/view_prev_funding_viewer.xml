<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id = "@+id/btn_select_funding"
    android:layout_width="360dp"
    android:layout_height="56dp">

    <TextView
        android:id = "@+id/text_funding_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/moimingBoldGray"
        android:lineSpacingExtra="10sp"
        android:text="21.01.01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/text_funding_name"/>

    <TextView
        android:id = "@+id/text_funding_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/textDark"
        android:lineSpacingExtra="8sp"
        android:text="이전 모금 이름"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id = "@+id/text_funding_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginRight="93dp"
        android:textColor="@color/textDark"
        android:lineSpacingExtra="8sp"
        android:gravity="end"
        android:text="100000원"
        app:layout_constraintTop_toTopOf="@id/text_funding_name"
        app:layout_constraintBottom_toBottomOf="@id/text_funding_name"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src = "@drawable/ic_move_main"
        android:layout_marginRight="24dp"
        app:layout_constraintTop_toTopOf="@id/text_funding_name"
        app:layout_constraintBottom_toBottomOf="@id/text_funding_name"
        app:layout_constraintRight_toRightOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>