<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_select_funding"
    android:layout_width="360dp"
    android:layout_height="80dp">

    <ImageView
        android:id ="@+id/img_1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/ic_move_main"
        app:layout_constraintBottom_toBottomOf="@id/text_funding_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_funding_name" />

    <TextView
        android:id="@+id/text_funding_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:lineSpacingExtra="8sp"
        android:text="이전 모금 이름"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/text_funding_date"
        app:layout_constraintTop_toBottomOf="@id/text_funding_date" />

    <TextView
        android:id="@+id/text_funding_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginRight="12dp"
        android:lineSpacingExtra="8sp"
        android:text="100000원"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/text_funding_name"
        app:layout_constraintRight_toLeftOf="@id/img_1"
        app:layout_constraintTop_toTopOf="@id/text_funding_name" />

    <TextView
        android:id="@+id/text_funding_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:lineSpacingExtra="10sp"
        android:text="21.01.01"
        android:textColor="@color/moimingBoldGray"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <View
        android:layout_width="328dp"
        android:layout_height="0.5dp"
        android:background="@color/moimingBoldGray"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    
</androidx.constraintlayout.widget.ConstraintLayout>