<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="328dp"
    android:layout_height="88dp"
    android:background="@drawable/shape_main_recycler_item">

    <ImageView
        android:id="@+id/main_recycler_group_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/img_sample_group"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id = "@+id/img_is_pinned"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="36dp"
        android:src = "@drawable/ic_pinned"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:id = "@+id/img_notice_exist"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="16dp"
        android:src = "@drawable/ic_notice_exist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/main_recycler_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:lineSpacingExtra="7sp"
        android:text="Sample Text"
        android:textColor="#353535"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        app:layout_constraintLeft_toRightOf="@id/main_recycler_group_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_recycler_group_recent_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="13sp"
        android:text="Sample Text"
        android:textColor="@color/textBoldGray"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@id/main_recycler_group_name"
        app:layout_constraintTop_toBottomOf="@id/main_recycler_group_name" />
</androidx.constraintlayout.widget.ConstraintLayout>