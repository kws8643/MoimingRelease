<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="220dp"
    android:layout_height="96dp"
    android:background="@drawable/shape_round_bg_white">

    <TextView
        android:id = "@+id/text_exit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textStyle="normal"
        android:textSize="16sp"
        android:textColor="@color/textDark"
        android:lineSpacingExtra="7sp"
        android:text="모임에서 나가시겠습니까?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/btn_exit_cancel"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:lineSpacingExtra="9sp"
        android:text="취소"
        android:textColor="@color/moimingTheme"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_group_exit_confirm" />


    <TextView
        android:id="@+id/btn_group_exit_confirm"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:lineSpacingExtra="9sp"
        android:text="확인"
        android:textColor="@color/moimingTheme"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>