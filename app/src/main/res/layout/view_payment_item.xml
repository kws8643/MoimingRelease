<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id = "@+id/layout_payment_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="80dp"
    android:background="@color/moimingWhite">

    <TextView
        android:id="@+id/text_payment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:lineSpacingExtra="13sp"
        android:text="21.01.01"
        android:textColor="@color/textBoldGray"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_payment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:lineSpacingExtra="9sp"
        android:text="장부 기록 이름"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/text_payment_item_date"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_payment_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginRight="32dp"
        android:gravity="end"
        android:lineSpacingExtra="9sp"
        android:text="+/- 지출금액"
        android:textColor="@color/textRed"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/text_payment_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_marginRight="32dp"
        android:gravity="end"
        android:lineSpacingExtra="13sp"
        android:text="계산된 금액"
        android:textColor="@color/textBoldGray"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_payment_cost" />

    <View
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:background="@color/moimingBoldGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>