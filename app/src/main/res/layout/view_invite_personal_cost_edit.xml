<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="304dp"
    android:layout_height="40dp"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <CheckBox
        android:id="@+id/is_cost_edited"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_personal_cost"
        android:layout_width="72dp"
        android:layout_height="32dp"
        android:layout_marginRight="24dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine|number"
        android:lineSpacingExtra="7sp"
        android:singleLine="true"
        android:textColor="@color/textDark"
        android:textSize="13sp"
        android:maxLength="8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/is_cost_edited"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id = "@+id/is_auto_changed"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:background="@drawable/shape_oval_main_theme"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/input_personal_cost"
        app:layout_constraintRight_toRightOf="@id/input_personal_cost"
        />

    <EditText
        android:id="@+id/text_personal_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:lineSpacingExtra="8sp"
        android:singleLine="true"
        android:text="강우석"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_personal_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_personal_profile"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_default_pf_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>