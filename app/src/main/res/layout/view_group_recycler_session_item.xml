<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="360dp"
    android:layout_height="80dp"
    android:background="@drawable/shape_main_recycler_item">

    <ImageView
        android:id="@+id/img_ic_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:src="@drawable/ic_creator"
        app:layout_constraintBottom_toBottomOf="@id/text_session_name"
        app:layout_constraintLeft_toRightOf="@id/text_session_name"
        app:layout_constraintTop_toTopOf="@id/text_session_name" />

    <ImageView
        android:id="@+id/img_to_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_move"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_session_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="19dp"
        android:lineSpacingExtra="9sp"
        android:text="세션 이름"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/text_session_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_session_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="7dp"
        android:lineSpacingExtra="13sp"
        android:text="01.01.01"
        android:textColor="@color/textBoldGray"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintLeft_toRightOf="@id/text_session_type"
        app:layout_constraintTop_toBottomOf="@id/text_session_name" />

    <TextView
        android:id="@+id/text_session_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:lineSpacingExtra="13sp"
        android:text="세션종류"
        android:textColor="@color/textBoldGray"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:gravity="end"
        android:lineSpacingExtra="9sp"
        android:text="Sample Text 1"
        android:textColor="@color/moimingTheme"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@id/img_to_session"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="end"
        android:lineSpacingExtra="13sp"
        android:text="Sample Text 2"
        android:textColor="@color/moimingTheme"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintRight_toLeftOf="@id/img_to_session"
        app:layout_constraintTop_toBottomOf="@+id/text_status" />


    <View
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:background="@color/moimingBoldGray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>